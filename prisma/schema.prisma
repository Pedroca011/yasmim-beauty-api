generator client {
  provider = "prisma-client"
  output   = "../node_modules/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(100)
  password  String    @db.VarChar(100)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  roleId    String?   @unique
  role      Role?     @relation(fields: [roleId], references: [id])
  userRole  UserRole?
}

model Role {
  id            String     @id @default(uuid())
  name          RoleName   @unique
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  users         User[]
  userRolesId   UserRole[] @relation("UserToRoleById")
  userRolesName UserRole[] @relation("UserToRoleByName")
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String   @unique
  roleId    String   @unique
  roleName  RoleName @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user       User @relation(fields: [userId], references: [id])
  roleById   Role @relation("UserToRoleById", fields: [roleId], references: [id])
  roleByName Role @relation("UserToRoleByName", fields: [roleName], references: [name])
}

enum RoleName {
  ADMIN
  PROFESSIONAL
  USER
}
