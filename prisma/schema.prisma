generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  name      String     @db.VarChar(100)
  email     String?    @unique @db.VarChar(100)
  phone     String?    @unique
  password  String?    @db.VarChar(100)
  role      RoleName   @default(USER)
  source    UserSource @default(WEB)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  appointmentsAsClient       Appointment[] @relation("ClientAppointments")
  appointmentsAsProfessional Appointment[] @relation("ProfessionalAppointments")
  canceledAppointments       Appointment[] @relation("CanceledBy")
}

enum RoleName {
  ADMIN
  PROFESSIONAL
  USER
}

enum UserSource {
  WEB
  WHATSAPP
  APP
}

model Service {
  id                 String        @id @default(uuid())
  name               String        @db.VarChar(100)
  description        String        @db.VarChar(255)
  currentPrice       Decimal       @db.Decimal(10, 2)
  servicePromotional Boolean?      @default(false)
  promotionalPrice   Decimal?      @db.Decimal(10, 2)
  duration           Int
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  appointments       Appointment[] @relation("AppointmentServices")
}

model Appointment {
  id             String  @id @default(uuid())
  clientId       String
  professionalId String
  canceledById   String?

  client       User  @relation("ClientAppointments", fields: [clientId], references: [id])
  professional User  @relation("ProfessionalAppointments", fields: [professionalId], references: [id])
  canceledBy   User? @relation("CanceledBy", fields: [canceledById], references: [id])

  services Service[] @relation("AppointmentServices")

  date       DateTime
  duration   Int
  status     StatusAppointment @default(SCHEDULED)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  canceledAt DateTime?
}

enum StatusAppointment {
  SCHEDULED
  PROGRESS
  CONCLUDED
  CANCELED
}

model OpeningHours {
  id                     String    @id @default(uuid())
  dayOfWeek              DayOfWeek
  dayClosed              Boolean   @default(false)
  openInMinutes          Int
  openIntervalInMinutes  Int
  closeIntervalInMinutes Int
  closeInMinutes         Int
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model BotSession {
  id        String   @id @default(uuid())
  remoteJid String   @unique // Ex: "5511999999999@s.whatsapp.net"
  step      String // Ex: "service", "date", "time"
  data      Json? // Armazena dados temporários como { serviceId: "xxx", date: "2026-02-01" }
  expiresAt DateTime // Para auto-expiração
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
