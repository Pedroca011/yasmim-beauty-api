generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(uuid())
  name      String    @db.VarChar(100)
  email     String    @unique @db.VarChar(100)
  password  String    @db.VarChar(100)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userRole  UserRole?
  services  Service[] @relation("ServiceProviders")
}

model Role {
  id        String     @id @default(uuid())
  name      RoleName   @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userRoles UserRole[]
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String   @unique
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])
}

enum RoleName {
  ADMIN
  PROFESSIONAL
  USER
}

model Service {
  id               String        @id @default(uuid())
  name             String        @db.VarChar(100)
  description      String        @db.VarChar(255)
  currentPrice     Decimal       @db.Money()
  promotionalPrice Decimal?      @db.Money()
  duration         Int
  globalService    Boolean?      @default(false)
  providers        User[]        @relation("ServiceProviders")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  appointments     Appointment[] @relation("AppointmentServices")
}

model Appointment {
  id           String            @id @default(uuid())
  serviceId    String
  services     Service[]         @relation("AppointmentServices")
  date         DateTime
  duration     Int
  status       StatusAppointment @default(SCHEDULED)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  canceledAt   DateTime?
  canceledById String?
}

enum StatusAppointment {
  SCHEDULED
  PROGRESS
  CONCLUDED
}
